#Implement Merge Sort and explain its performance using the Big O notation.

def MergeSort(array):

    if len(array)>1:
        left = array[:middle]
        middle = len(array)//2
        right = array[middle:]

#Code to combine subarrays
def Merge(left,right,array):
        MergeSort(left)
        MergeSort(right)
        i=j=k=0
        
    while (i<len(left) and j<len(right)):
        if left[i] < right[j]:
            array[k] = left[j]
            i=i+1
        else:
            array[k] = right[j]
            j=j+1
            k=k+1
            
   while (i<len(left)):
       array[k] = left[i]
       i=i+1
       k=k+1
        
        
            
        
        
